{
  "compilerOptions": {
    "outDir": "dist",
    "sourceMap": true,
    "target": "esnext",          // Keep 'esnext' for modern JavaScript features
    "module": "commonjs",        // CommonJS is the default for Node.js
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": true,
    "strict": true,
    "skipLibCheck": true,
    "experimentalDecorators": true,  // Enable decorators
    "emitDecoratorMetadata": true,    // Emit decorator metadata
    "moduleResolution": "node"
  },
  "include": [
    "./api/*.ts",
    "./*.js",
    "src/**/*.ts",
    "test/**/*.ts",
    "src/utils/logs/logger.ts",
    "src/types/**/*", 
    "src/**/*.ts"
  ]
}
